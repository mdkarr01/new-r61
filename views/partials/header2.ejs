<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Route61</title>
  <META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
  <!-- Bootstrap CSS-->
  <link rel="stylesheet" href="../../vendor/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome CSS-->
  <link rel="stylesheet" href="../../vendor/font-awesome/css/font-awesome.min.css">
  <!-- Custom icon font-->
  <link rel="stylesheet" href="../../stylesheets/fontastic.css">
  <!-- Google fonts - Open Sans-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Catamaran:400,700">
  <!-- theme stylesheet-->
  <link rel="stylesheet" href="../../stylesheets/style.default.css" id="theme-stylesheet">
  <!-- Custom stylesheet - for your changes-->
  <link rel="stylesheet" href="../../stylesheets/contact.css" id=theme-stylesheet>
  <!-- Tweaks for older IEs-->
  <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="#page-top">Sixty One</a>
      <button class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
        aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars fa-2x"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav text-uppercase ml-auto">
          <% if(currentUser){ %>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/posts">Home</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href="#">Signed In As
                <%= currentUser.username %>
              </a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href="/logout">Logout</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href="/posts/new">New Post</a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <form action="/posts" method="GET" class="form-inline" id="post-search">
                  <div class="form-group">
                    <input type="text" name="search" placeholder="Search" class="form-control">
                  </div>
                </form>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/posts">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/contact">Contact</a>
              </li>
              <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section-->
  <section style="background: url(../images/country-road.jpg); background-size: cover; background-position: center center; max-height: 300px;"
    class="hero">
    <div class="container">
      <div class="row">
        <div class="col-md-12 header-text">
          <img src="../images/61.png" alt="Route 61 road sign">
        </div>
      </div>
    </div>
  </section>

  <div class="container">
    <div class='flash-message'>
      <% if(error && error.length > 0) { %>
        <div class="alert alert-danger">
          <p>
            <%=error %>
          </p>
        </div>
        <% } %>

          <% if(success && success.length > 0) { %>
            <div class="alert alert-success">
              <p>
                <%= success %>
              </p>
            </div>
            <% } %>
    </div>
  </div>