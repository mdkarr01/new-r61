<% include ../partials/header2 %>
    <div class="container">
        <div class="row">
            <div class="new-blocks id=" contact ">
            <fieldset>
            <% if (Object.keys(errors).length === 0) { %>
            <legend>&nbsp;Send A Message</legend>
            <% } else { %>
              <h5 class="errors-heading ">Oops, please correct the following:</h5>
              <ul class="errors-list ">
            <% Object.values(errors).forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
              </ul>
          <%}%>
                <form action='/contact' method="POST " id="contactForm " name="sentMessage " novalidate>
                    <input type="hidden " name="_csrf " value="<%=c srfToken %>">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input class="form-control" name="name" id="name" type="text" value="<%= data.name %>" placeholder="Your Name *" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control <%= errors.email ? 'form-field-invalid': ''%>" name="email" id="email" type="email" value="<%=data.email %>"
                                placeholder="Your Email *" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control <%= errors.phone ? 'form-field-invalid': ''%>" name="phone" id="phone" type="tel" value="<%= data.phone %>"
                                placeholder="Your Phone">
                            <small>
                                <em>Not required</em>
                            </small>
                            <% if (errors.phone) { %>
                                <div class="error">
                                    <%= errors.phone.msg %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea class="form-control <%= errors.message ?'form-field-invalid': '' %>" name="message" id="message" placeholder="Talk to us! *"
                                required>
                                <%=data.message %>
                            </textarea>
                            <% if (errors.message) { %>
                                <div class="error">
                                    <%= errors.message.msg %>
                                </div>
                                <% } %>
                        </div>
                        <small>* Required</small>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 text-center">
                        <div id="success"></div>
                        <button id="sendMessageButton" class="btn btn-primary btn-block text-uppercase" type="submit">Send Message</button>
                    </div>
                </div>
                </form </fieldset <a href="/posts">View All Posts</a>
            </div>
        </div>
    </div>
    <% include ../partials/footer2 %>