<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div col-md-8 style="width: 30%; margin: 25px auto;">
                <h1 style="text-align: center">Edit Comment</h1>
                <form action="/posts/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/posts">Go Back</a>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>