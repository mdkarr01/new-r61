<% include ./partials/header %>
    <div class="container">
        <div class="row">
            <div class="new-blocks">
                <fieldset>
                    <legend>Send A Message</legend>

                    <% if (Object.keys(errors).length !== 0) { %>
                        <% Object.values(errors).forEach(error => { %>
                            <hp class="errors-heading">
                                <strong>Oops, please correct the following:</strong>
                                </p>
                                <ul class="errors-list">
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                </ul>
                                <%});%>
                                    <% } %>
                                        <form action='/contact' method="POST" id="contactForm" name="sentMessage" novalidate>
                                            <!-- <input type="hidden" name="_csrf" value=""> -->
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input class="form-control" name="name" id="name" type="text" value="<%= data.name%>" placeholder="Your Name *" requireddata-validation-required-message="Please enter your name.">
                                                        <p class="help-block text-danger"></p>
                                                    </div>
                                                    <div class="form-group">
                                                        <input class="form-control <%= errors.email ? 'form-field-invalid': '' %>" name="email" id="email" type="email" value="<%=data.email %>"
                                                            placeholder="Your Email *" requireddata-validation-required-message="Please enter your emailaddress.">
                                                        <% if (errors.email) { %>
                                                            <div class="error">
                                                                <%= errors.email.msg %>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                    <div class="form-group">
                                                        <input class="form-control <%= errors.phone ? 'form-field-invalid': '' %>" name="phone" id="phone" type="tel" value="<%= data.phone%>"
                                                            placeholder="Your Phone">
                                                        <!-- <p class="help-block text-danger"></p> -->
                                                        <small style="color: white;">
                                                            <em>Not required</em>
                                                        </small>
                                                        <% if (errors.phone) { %>
                                                            <div class="error">
                                                                <%= errors.phone.msg %>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <textarea class="form-control <%= errors.message ?'form-field-invalid' : '' %>" name="message" id="message" placeholder="Talk to us! *">
                                                            <%=data.message %>
                                                        </textarea>
                                                        <% if (errors.message) { %>
                                                            <div class="error">
                                                                <%= errors.message.msg %>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                </div>
                                                <p>* Required</p>

                                                <div class="clearfix"></div>
                                                <div class="col-lg-12 text-center">
                                                    <div id="success"></div>
                                                    <button class="btn btn-lg btn-primary btn-block">Submit</button>

                                                </div>
                                            </div>
                                        </form>
                </fieldset>
                <a href="/posts">View All Posts</a>
            </div>
        </div>
    </div>
    <% include ./partials/footer %>